{
    "compilerOptions": {
      "target": "ES2020",                /* Version de JavaScript générée */
      "module": "CommonJS",               /* Spécifie le format des modules */
      "outDir": "./dist",                 /* Dossier de sortie pour le JavaScript compilé */
      "rootDir": "./src",                 /* Dossier des fichiers sources */
      "esModuleInterop": true,            /* Permet d'importer des modules CommonJS */
      "strict": true,                     /* Active la vérification stricte des types */
      "skipLibCheck": true,               /* Ignore la vérification des types dans les librairies externes */
      "forceConsistentCasingInFileNames": true /* Assure la cohérence des noms de fichiers */
    },
    "include": [
      "src/**/*.ts"
    ]
  }
  